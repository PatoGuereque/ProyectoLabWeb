{
  "name": "back",
  "version": "1.0.0",
  "description": "backend",
  "main": "src/index.js",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "helmet": "^5.0.2",
    "jsonwebtoken": "^8.5.1",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.17.6",
    "@babel/core": "^7.17.8",
    "@babel/node": "^7.16.8",
    "@babel/preset-env": "^7.16.11",
    "cross-env": "^7.0.3",
    "eslint": "^8.12.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.25.4",
    "lint-staged": "^12.3.7",
    "nodemon": "^2.0.15",
    "prettier": "^2.6.1",
    "shx": "^0.3.4"
  },
  "scripts": {
    "start": "nodemon src/index.js --exec babel-node",
    "build": "yarn clean && yarn build:server && yarn build:client && yarn mergefront",
    "build:server": "cross-env BABEL_ENV=production babel src --out-dir dist",
    "build:client": "cd ../front/ && yarn build",
    "mergefront": "yarn shx mv ../front/build dist/static",
    "format": "prettier --write",
    "clean": "yarn shx rm -rf ../front/build dist",
    "lint": "eslint ."
  },
  "lint-staged": {
    "*.js": "prettier --write"
  }
}
